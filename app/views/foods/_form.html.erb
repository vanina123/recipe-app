<div class="container">
  <%= form_with(model: @food) do |form| %>
    <div class="mb-3">
      <%= form.label :food, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :quantity, class: "form-label" %>
      <%= form.number_field :quantity, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :measurement_unit, class: "form-label" %>
      <%= form.text_field :measurement_unit, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :price, class: "form-label" %>
      <%= form.number_field :price, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :user_id, class: "form-label" %>
      <%= form.number_field :user_id, class: "form-control" %>
    </div>

    <% if @food.errors.any? %>
      <div class="alert alert-danger" id="error_explanation">
        <h2><%= pluralize(@food.errors.count, "error") %> prohibited this food item from being saved:</h2>
        <ul>
          <% @food.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.submit "Save", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
